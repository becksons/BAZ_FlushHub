<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/> <!-- Unchecked color -->
            <stroke android:width="2dp" android:color="@android:color/black"/> <!-- Border color -->
            <corners android:radius="7dp"/> <!-- Optionally round corners -->
        </shape>
    </item>
</selector>