<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="410dp"
    android:background="@color/fh_background"


    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/boggleLayout"
        android:elevation="8dp"

        android:translationY="30dp"
        android:background="@color/fh_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        android:orientation="vertical"

        android:padding="30dp"
        >
        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="610dp"
            android:layout_height="60dp"
            android:layout_gravity="center"


            android:orientation="horizontal"

            android:elevation="10dp"
            android:layout_marginBottom="30dp"


            android:translationX="90dp"
            android:translationY="30dp"
            android:background="@color/fh_background"


            >
            <View
                android:layout_width="20dp"
                android:layout_height="match_parent">

            </View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:fontFamily="@font/ruda_black"


                android:text="@string/score"
                android:translationX="125dp"
                android:translationY="0dp"

                android:textSize="35sp" />

            <TextView
                android:id="@+id/score_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/ruda_regular"
                android:text="@string/default_score"
                android:textSize="40sp"
                android:translationX="110dp"
             />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:translationY="20dp"
            >
            <Button

                android:id="@+id/boggle_back_button"
                android:layout_width="90dp"
                android:layout_height="wrap_content"

                android:layout_marginBottom="0dp"
                android:fontFamily="@font/ruda_bold"
                android:textSize="11sp"
                android:text="@string/back"
               >


            </Button>

            <ImageView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginStart="45dp"
                android:layout_marginEnd="40dp"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:src="@drawable/cool_toilet_icon">

            </ImageView>
            <Button
                android:id="@+id/new_game_button"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-6dp"
                android:fontFamily="@font/ruda_bold"
                android:textSize="12sp"
                android:text="@string/new_game"
                >


            </Button>

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/boggle"
            android:textSize="50dp"
            android:translationY="10dp"
            android:fontFamily="@font/ruda_black"
            android:layout_gravity="center">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/ruda_bold"
            android:layout_margin="10dp"
            android:paddingBottom="10dp"
            android:textAlignment="center"
            android:text="@string/enter_a_word_then_hit_submit"

            android:textSize="15sp">

        </TextView>
        <View
            android:layout_width="300dp"
            android:layout_height="3dp"
            android:layout_gravity="center"
            android:background="@color/black"
            >

        </View>

        <GridLayout

            android:id="@+id/game_letters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="4"
            android:elevation="8dp"

            android:rowCount="4">



            <Button
                android:id="@+id/Button00"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_row="0"
                android:layout_column="0"
                android:background="@drawable/boggle_button_style"
                android:fontFamily="@font/ruda_black" />

            <Button
                android:id="@+id/Button01"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_row="0"
                android:layout_column="1"
                android:background="@drawable/boggle_button_style"
                android:fontFamily="@font/ruda_black" />

            <Button
                android:id="@+id/Button02"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_row="0"
                android:layout_column="2"
                android:background="@drawable/boggle_button_style"
                android:fontFamily="@font/ruda_black" />

            <Button
                android:id="@+id/Button03"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_row="0"
                android:layout_column="3"
                android:background="@drawable/boggle_button_style"
                android:fontFamily="@font/ruda_black" />

            <Button
                android:id="@+id/Button10"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_row="1"
                android:layout_column="0"
                android:background="@drawable/boggle_button_style"
                android:fontFamily="@font/ruda_black" />

            <Button
                android:id="@+id/Button11"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_row="1"
                android:layout_column="1"
                android:background="@drawable/boggle_button_style"
                android:fontFamily="@font/ruda_black" />

            <Button
                android:id="@+id/Button12"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_row="1"
                android:layout_column="2"
                android:background="@drawable/boggle_button_style"
                android:fontFamily="@font/ruda_black" />

            <Button
                android:id="@+id/Button13"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_row="1"
                android:layout_column="3"
                android:background="@drawable/boggle_button_style"
                android:fontFamily="@font/ruda_black" />

            <Button
                android:id="@+id/Button20"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_row="2"
                android:layout_column="0"
                android:background="@drawable/boggle_button_style"
                android:fontFamily="@font/ruda_black" />

            <Button
                android:id="@+id/Button21"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_row="2"
                android:layout_column="1"
                android:background="@drawable/boggle_button_style"
                android:fontFamily="@font/ruda_black" />

            <Button
                android:id="@+id/Button22"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_row="2"
                android:layout_column="2"
                android:background="@drawable/boggle_button_style"
                android:fontFamily="@font/ruda_black" />

            <Button
                android:id="@+id/Button23"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_row="2"
                android:layout_column="3"
                android:background="@drawable/boggle_button_style"
                android:fontFamily="@font/ruda_black" />

            <Button
                android:id="@+id/Button30"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_row="3"
                android:layout_column="0"
                android:background="@drawable/boggle_button_style"
                android:fontFamily="@font/ruda_black" />

            <Button
                android:id="@+id/Button31"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_row="3"
                android:layout_column="1"
                android:background="@drawable/boggle_button_style"
                android:fontFamily="@font/ruda_black" />

            <Button
                android:id="@+id/Button32"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_row="3"
                android:layout_column="2"
                android:background="@drawable/boggle_button_style"
                android:fontFamily="@font/ruda_black" />

            <Button
                android:id="@+id/Button33"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_row="3"
                android:layout_column="3"
                android:background="@drawable/boggle_button_style"
                android:fontFamily="@font/ruda_black" />
        </GridLayout>
        <View
            android:layout_width="300dp"
            android:layout_height="3dp"
            android:layout_gravity="center"
            android:background="@color/black"
            >

        </View>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="-10dp"
            android:translationY="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/clear_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/clear"
                android:fontFamily="@font/ruda_bold"

                >


            </Button>
            <TextView
                android:id="@+id/word_display"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:text="____"
                android:textAlignment="center"
                android:fontFamily="@font/ruda_bold"
                android:textSize="35sp"
                android:translationY="-10dp">


            </TextView>

            <Button
                android:id="@+id/submit_button"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="@string/submit"
                android:layout_marginStart="10dp"

                android:fontFamily="@font/ruda_bold"


                >


            </Button>


        </LinearLayout>





    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>