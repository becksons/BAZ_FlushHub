<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:layout_margin="3dp"
    app:cardCornerRadius="4dp"
    android:background="@color/fh_tool_bar"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"

        android:background="@color/fh_tool_bar"

         >


        <TextView
            android:id="@+id/restroom_list_rank_num"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_margin="20dp"

            android:textAlignment = "textStart"

            android:text="#1"
            android:fontFamily="@font/ruda_bold"
            android:textColor="@color/black"
            android:translationX="-7dp"
            android:textSize="20sp"


             />






        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="60dp"

            android:translationX="-10dp"




            android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp">

        </View>

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:translationX="12dp"
                android:translationY="10dp"
                android:orientation="horizontal">
                <TextView

                    android:id="@+id/review_list_item_building"
                    android:layout_width="80dp"
                    android:layout_height="30dp"

                    android:fontFamily="@font/ruda_regular"
                    android:text="building"

                    android:textColor="#000"

                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/review_list_item_floor"
                    android:layout_width="80dp"
                    android:layout_height="30dp"

                    android:fontFamily="@font/ruda_regular"
                    android:text="floor"
                    android:translationX="-20dp"
                    android:textAlignment="center"

                    android:textColor="#000"

                    android:textSize="18sp" />



            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/restroom_list_item_gender"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_gravity="end"
            android:translationX="0dp"
            android:elevation="40dp"
            android:src="@drawable/gender_nuetral_icon" />
        <View
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            >

        </View>
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:translationY="-5dp"
            android:translationX="-20dp">

            <RatingBar
                android:id="@+id/review_list_rate_bar"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:numStars="5"
                android:rating="3"
                android:translationX="-50dp"
                android:scaleX=".4"
                android:scaleY=".4">

            </RatingBar>
            <Button
                android:id="@+id/show_bathroom_reviews_list_button"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:translationY="-10dp"
                android:textColor="@color/black"
                android:fontFamily="@font/ruda_black"
                android:text = "REVIEWS"
                android:textSize="12dp"
                >

            </Button>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
