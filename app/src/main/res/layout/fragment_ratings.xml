<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DADADA"
    tools:context="com.example.flushhubproto.ui.rating.RatingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:translationY="100dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/empty_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/ruda_regular"
            android:gravity="center"
            android:text="@string/no_ratings_available"
            android:visibility="gone" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:elevation="18dp"
            android:layout_margin="10dp"


            >
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="3"
                android:background="@color/fh_tool_bar"
                android:rowCount="3">
                <TextView
                    android:layout_column="2"
                    android:layout_row="0"
                    android:layout_height="50dp"
                    android:layout_width="240dp"
                    android:layout_margin="10dp"
                    android:translationX="-70dp"

                    android:fontFamily="@font/ruda_black"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:text="BU's Top Restroom:">

                </TextView>
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:layout_margin="20dp"
                    android:elevation="60dp"
                    android:scaleType="fitXY"
                    android:scaleX="1.6"
                    android:scaleY="1.2"
                    android:src="@drawable/top_star_icon"
                    android:layout_row="0"
                    android:layout_column="0"

                    android:translationX="-20dp"
                    />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:fontFamily="@font/ruda_black"
                    android:layout_margin="20dp"
                    android:translationY="-120dp"

                    android:text="@string/building"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_column="0"
                    android:layout_row="1"
                    >
                </TextView>
                <TextView
                    android:id="@+id/top_building"
                    android:layout_width="150dp"
                    android:layout_height="60dp"

                    android:fontFamily="@font/ruda_bold"
                    android:text="@string/name"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:translationY="-75dp"
                    android:translationX="30dp"

                    android:layout_row="1"
                    android:layout_column="0">


                </TextView>
                <RatingBar
                    android:id="@+id/top_rating_bar"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:elevation="35dp"
                    android:numStars="5"
                    android:scaleY=".8"
                    android:scaleX=".8"


                    android:progressTint="@color/purple_500"
                    android:rating="5"
                    android:translationY="40dp"
                    android:translationX="-60dp"

                    android:layout_column="2"
                    android:layout_row="0">

                </RatingBar>
                <TextView
                    android:id="@+id/top_rating_num"
                    android:layout_width="150dp"
                    android:layout_height="60dp"

                    android:fontFamily="@font/ruda_black"
                    android:text="@string/x_stars"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="35sp"
                    android:translationY="-75dp"

                    android:layout_row="1"
                    android:layout_column="2">
                    </TextView>


            </GridLayout>
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="30dp"
            android:translationX="100dp"
            android:orientation="horizontal">
            <TextView

                android:layout_width="100dp"
                android:layout_height="30dp"

                android:fontFamily="@font/ruda_bold"
                android:text="@string/building_list"
                android:layout_margin="5dp"
                android:textColor="#000"

                android:textSize="16sp" />

            <TextView

                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:fontFamily="@font/ruda_bold"
                android:text="@string/gender_list"
                android:translationX="-30dp"
                android:textColor="#000"

                android:textSize="16sp" />
            <TextView

                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:fontFamily="@font/ruda_bold"
                android:text="Ratings"
                android:translationX="-30dp"
                android:textColor="#000"

                android:textSize="16sp" />




        </LinearLayout>
        <View
            android:layout_width="350dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:background="@color/black">

        </View>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ratingsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scrollbars="vertical"
            android:layout_margin="10dp"
              />

        <Button
            android:id="@+id/leaveReview"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_gravity="bottom|end"
            android:text="@string/leave_a_review">

        </Button>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>