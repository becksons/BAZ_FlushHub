<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context="com.example.flushhubproto.MainActivity">

    <include layout="@layout/content_main" />
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@color/purple_500"


        >




        <include layout="@layout/nav_header_main"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"


            >



            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:translationX="140dp"
                android:translationY="5dp"
                >

                <TextView
                    android:id = "@+id/greeting_text_name"
                    android:layout_width="250dp"

                    android:layout_height="30dp"
                    android:layout_gravity="start"
                    android:textSize="22sp"
                    android:text = "@string/greet_user_default"
                    android:textColor="@color/white"
                    android:fontFamily="@font/ruda_regular"

                    >



                </TextView>

                <TextView
                    android:id="@+id/greeting_miles_away"
                    android:layout_width="240dp"
                    android:layout_height="50dp"
                    android:layout_gravity="start"
                    android:textSize="18sp"
                    android:text="@string/nearest_restroom_is_x_miles_away"
                    android:textColor="@color/white"
                    android:fontFamily="@font/ruda_regular"
                    android:translationY="-5dp"

                    />



            </LinearLayout>




        </LinearLayout>
        <include layout="@layout/content_main"/>
        <ImageButton
            android:id="@+id/open_drawer_button"
            android:layout_width="170dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"

            android:scaleType="fitXY"
            android:scaleX=".9"
            android:scaleY="1.6"
            android:src="@drawable/tp_menu"
            android:text="@string/menu"
            android:textSize="20sp"

            android:translationX="-135dp"
            android:translationY="-115dp">

        </ImageButton>


    </com.google.android.material.appbar.AppBarLayout>



</androidx.coordinatorlayout.widget.CoordinatorLayout>