<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"

    tools:context="com.example.flushhubproto.MainActivity">

    <include layout="@layout/content_main" android:id="@+id/content_main" />

    <TextView
        android:id="@+id/menu_text"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:text = "@string/menu"
        android:textSize="20dp"
        android:elevation="25dp"
        android:fontFamily="@font/ruda_bold"
        android:textColor="@color/black"
        android:translationY="50dp"
        android:translationX="20dp">

    </TextView>

    <include layout="@layout/app_banner" android:id="@+id/app_banner" />
    <ImageButton
        android:id="@+id/open_drawer_button"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:layout_gravity="end"
        android:layout_margin="10dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:elevation="20dp"
        android:scaleType="fitXY"
        android:scaleX="1.1"
        android:scaleY="1.6"
        android:src="@drawable/tp_menu"
        android:text="@string/menu"
        android:textSize="20sp"
        android:translationX="-275dp"
        android:translationY="10dp">
    </ImageButton>



    <com.google.android.material.appbar.AppBarLayout
        android:id ="@+id/app_bar_red"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/purple_500"
        android:elevation="10dp"

        >


    </com.google.android.material.appbar.AppBarLayout>



</androidx.coordinatorlayout.widget.CoordinatorLayout>