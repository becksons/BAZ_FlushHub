<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="0dp"
        android:layout_height="400dp"
        android:layout_margin="15dp"

        android:layout_marginTop="100dp"
        android:translationY="100dp"
        app:cardBackgroundColor="@color/fh_background"
        app:cardCornerRadius="10dp"
        app:cardElevation="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:id="@+id/showReview"
            android:layout_width="match_parent"
            android:layout_height="400dp"


            android:background="@color/fh_background"


            android:elevation="18dp"

            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/review_list_back_button"
                    android:layout_width="70dp"
                    android:layout_height="70dp"


                    android:background="@android:color/transparent"

                    android:elevation="10dp"

                    android:fontFamily="@font/ruda_regular"
                    android:scaleType="fitCenter"
                    android:scaleX="1.2"
                    android:scaleY="1.2"

                    android:src="@drawable/back_arrow"
                    android:text="@string/back">

                </ImageButton>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:fontFamily="@font/ruda_black"
                    android:text="Reviews:"
                    android:textAlignment="center"
                    android:textColor="@color/purple_500"

                    android:textSize="35sp"
                    android:translationX="20dp">

                </TextView>


            </LinearLayout>

            <ListView
                android:id="@+id/individual_review_list_view"
                android:layout_width="320dp"
                android:layout_height="330dp"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:fitsSystemWindows="true"
                android:background="@color/white"
                android:translationY="-340dp"

                >

            </ListView>


        </LinearLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>