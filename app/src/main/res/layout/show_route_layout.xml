<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id = "@+id/show_route_layout_xml"
    android:background="@color/fh_tool_bar"
    android:layout_height="130dp"
    android:layout_margin="10dp"
    android:elevation="20dp"
    >
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="5"

        android:rowCount="3">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:scaleX="1.8"
            android:scaleY="1.8"

            android:layout_marginTop="20dp"
            android:layout_row="0"
            android:layout_column="0"
            android:src= "@drawable/location_pin">

        </ImageView>
        <TextView
            android:layout_width = "100dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/ruda_bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="Address:"
            android:translationX="0dp"
            android:textAlignment="center"
            android:layout_column="1"
            android:layout_row="0">
        </TextView>

        <TextView
            android:id="@+id/show_route_layout_address"
            android:layout_width = "190dp"
            android:layout_height="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="-40dp"
            android:fontFamily="@font/ruda_regular"
            android:textSize="14sp"
            android:translationX="-20dp"
            android:translationY="-10dp"
            android:textColor="@color/black"
            android:text="Address"
            android:layout_column="3"
            android:layout_row="0">
        </TextView>

        <TextView
            android:layout_width="85dp"
            android:layout_height="20dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/ruda_bold"
            android:text="Distance:"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:translationX="15dp">

        </TextView>
        <TextView
            android:id="@+id/show_route_layout_distance"
            android:layout_width = "60dp"
            android:layout_height="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginStart="-10dp"
            android:fontFamily="@font/ruda_regular"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="Distance"
            android:layout_column="2"
            android:layout_row="1">
        </TextView>
        <TextView
            android:layout_width = "90dp"
            android:layout_height="30dp"
            android:layout_marginTop="0dp"
            android:layout_marginStart="-10dp"
            android:fontFamily="@font/ruda_bold"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="ETA:"
            android:translationX="10dp"
            android:textAlignment="center"
            android:layout_column="3"
            android:layout_row="1">
        </TextView>
        <TextView
            android:id="@+id/show_route_layout_eta"
            android:layout_width = "150dp"
            android:layout_height="40dp"
            android:layout_marginTop="0dp"
            android:layout_marginStart="-45dp"
            android:fontFamily="@font/ruda_regular"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="ETA"
            android:translationX="-40dp"
            android:layout_column="4"
            android:layout_row="1">
        </TextView>
        <TextView
            android:layout_width = "80dp"
            android:layout_height="20dp"
            android:layout_marginTop="-10dp"
            android:layout_marginStart="17dp"
            android:fontFamily="@font/ruda_bold"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="Rating:"

            android:translationX="6dp"

            android:layout_column="1"
            android:layout_row="2">
        </TextView>

        <RatingBar
            android:id="@+id/show_route_layout_rating_bar"
            android:layout_height="45dp"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_marginStart="-135dp"
            android:scaleY=".5"
            android:scaleX=".5"

            android:layout_marginTop="-25dp"
            >

        </RatingBar>
        <ImageButton
            android:id= "@+id/collapse_button"
            android:layout_height="50dp"
            android:layout_width="60dp"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_margin="10dp"
            android:translationY="-20dp"

            android:scaleType="fitCenter"
            android:src= "@drawable/collapse_arrow"
            android:scaleX="1.5"
            android:scaleY="1.3">

        </ImageButton>
        <Button
            android:id="@+id/map_button"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:background="@drawable/find_button"
            android:drawableLeft="@drawable/walk_icon"

            android:elevation="15dp"
            android:fontFamily="@font/ruda_black"
            android:translationY="-32dp"


            android:text="GO"
            android:textSize = "16sp"
            android:textColor="@color/black"
            android:translationX="30dp"
            android:layout_column="3"
            android:layout_row="2"


            />


    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>