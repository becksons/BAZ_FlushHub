<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@android:color/transparent"
    tools:context="com.example.flushhubproto.ui.">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <Button
            android:id="@+id/query_res_back_button"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_margin="100dp"
            android:layout_marginStart="40dp"

            android:layout_marginTop="20dp"

            android:text="@string/back"
            android:translationX="-80dp"
            android:translationY="-80dp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/query_map_container"
            android:layout_width="410dp"
            android:layout_height="450dp"
            android:background="@android:color/transparent"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:context="com.example.flushhubproto.ui.home.HomeFragment" />

        <LinearLayout
            android:id="@+id/go_to_route_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/fh_tool_bar"
            android:elevation="10dp"
            android:orientation="vertical"
            android:visibility="gone"


            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:context="com.example.flushhubproto.ui.home.GoToRouteFragment">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"


                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="20dp"
                    android:src="@drawable/location_pin"
                    android:translationX="-20dp"
                    android:translationY="-15dp">

                </ImageView>

                <TextView
                    android:id="@+id/details_text_view"
                    android:layout_width="220dp"
                    android:layout_height="40dp"
                    android:fontFamily="@font/ruda_regular"

                    android:text="Details will appear here"
                    android:textColor="#000000"
                    android:textSize="14sp"


                    android:translationX="-30dp" />

                <Button
                    android:id="@+id/map_button"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/find_button"
                    android:drawableLeft="@drawable/walk_icon"

                    android:elevation="8dp"
                    android:fontFamily="@font/ruda_black"

                    android:text="GO"
                    android:textColor="@color/black"


                    android:textSize="21sp"


                    />


            </LinearLayout>

            <!-- TextView for displaying route details like coordinates, distance, and time -->


        </LinearLayout>


        <include
            android:id="@+id/query_res_recycler_view"
            layout="@layout/query_res_recycler_list"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>