<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:background="@color/fh_tool_bar"
    android:layout_margin="5dp"
    android:elevation="8dp">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="3"
        android:rowCount="3">
        <TextView
            android:layout_height="30dp"
            android:layout_width="90dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:fontFamily="@font/ruda_bold"
            android:text="Review:"
            android:layout_column="0"

            android:layout_row="0">
        </TextView>

        <TextView
            android:id="@+id/individual_review_text"
            android:layout_width="350dp"
            android:layout_height="90dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:background="@drawable/boggle_button_style"
            android:elevation="8dp"
            android:layout_gravity="center"
            android:fontFamily="@font/ruda_regular"
            android:hint="review here"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:translationX="10dp"
            >

        </TextView>
        <TextView
            android:id="@+id/individual_review_num_stars"
            android:layout_height="30dp"
            android:layout_width="90dp"

            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:fontFamily="@font/ruda_bold"
            android:text="3.5 stars"
            android:layout_column="1"
            android:translationX="-80dp"

            android:layout_row="0"
            >
        </TextView>

        <RatingBar
            android:id="@+id/individual_review_rating_bar"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_row="0"
            android:layout_column="1"
            android:numStars="5"
            android:translationX="-280dp"


            android:scaleX=".6"
            android:scaleY=".6"
             >


        </RatingBar>


    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>