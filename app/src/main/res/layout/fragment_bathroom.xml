<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bathroomPageLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:elevation="15dp"
>

 <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@color/fh_tool_bar"
        android:columnCount="5"
        android:rowCount="5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/bathroom_details_back_button"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/back_arrow">
        </ImageButton>

        <TextView
            android:layout_width="300dp"
            android:layout_height="39dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:fontFamily="@font/ruda_black"
            android:text="Bathroom Details:"
            android:textColor="@color/teal_200"
            android:textSize="25dp"

            android:translationX="-50dp"
            android:translationY="10dp" />

        <View
            android:layout_width="380dp"
            android:layout_height="1dp"
            android:layout_row="0"
            android:layout_column="1"

            android:background="@color/black"
            android:translationX="-135dp"
            android:translationY="65dp">

        </View>

        <TextView
            android:layout_width="100dp"
            android:layout_height="39dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:fontFamily="@font/ruda_black"
            android:text="@string/building"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:translationX="30dp" />


        <TextView
            android:id="@+id/Bathroom_Name"
            android:layout_width="150dp"
            android:layout_height="39dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:fontFamily="@font/ruda_regular"
            android:text="@string/building"


            android:textColor="@color/black"
            android:textSize="18dp"
            android:translationX="-20dp" />

        <TextView
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="10dp"
            android:fontFamily="@font/ruda_black"
            android:text="Description:"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:translationX="30dp"
            android:translationY="-20dp" />

        <View
            android:layout_width="380dp"
            android:layout_height="1dp"
            android:layout_row="3"
            android:layout_column="2"
            android:background="@color/black"
            android:translationX="-545dp"
            android:translationY="-30dp">

        </View>

        <TextView
            android:id="@+id/Bathroom_Description"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:fontFamily="@font/ruda_regular"
            android:text="Placeholder"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:translationX="10dp"
            android:translationY="-80dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_gravity="center"
            android:background="@color/fh_tool_bar"
            android:elevation="20dp"
            android:translationX="-150dp"
            android:translationY="-220dp">
            <TextView
                android:id="@+id/Best_Review"
                android:elevation="22dp"
                android:layout_width="150dp"
                android:layout_height="111dp"
                android:layout_margin="10dp"
                android:text="Placeholder" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/Top_Review"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:fontFamily="@font/ruda_black"
            android:text="Top Review:"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:translationX="-120dp"
            android:translationY="-30dp" />

        <RatingBar
            android:id="@+id/ratingBathroomBar"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:scaleX=".7"
            android:scaleY=".7"
            android:translationX="-20dp"

            android:translationY="-40dp" />

        <Button
            android:id="@+id/detail_map_button"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_gravity="center"
            android:background="@drawable/find_button"
            android:drawableLeft="@drawable/walk_icon"
            android:elevation="15dp"
            android:fontFamily="@font/ruda_black"
            android:text="GO"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:translationX="250dp"
            android:translationY="180dp"
            />
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>