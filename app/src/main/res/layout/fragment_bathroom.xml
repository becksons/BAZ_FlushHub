<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/bathroomPageLayout"
    android:layout_width="match_parent"
    android:background="@color/fh_tool_bar"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <GridLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="5"

        android:rowCount="5"

        >

        <ImageButton
            android:id="@+id/bathroom_details_back_button"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src = "@drawable/back_arrow"


            android:layout_row="0"
            android:layout_column="0">

        </ImageButton>
        <TextView
            android:layout_width="100dp"
            android:layout_height="39dp"
            android:translationX="30dp"
            android:layout_margin="10dp"
            android:fontFamily="@font/ruda_black"
            android:text="@string/building"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_column="0"
            android:layout_row="1"/>


        <TextView
            android:id="@+id/Bathroom_Name"
            android:layout_width="150dp"
            android:layout_height="39dp"
            android:fontFamily="@font/ruda_regular"
            android:text="@string/building"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:translationX="-20dp"


            android:layout_margin="10dp"
            android:layout_column="1"
            android:layout_row="1"/>

        <TextView
            android:layout_width="130dp"
            android:layout_margin="10dp"
            android:fontFamily="@font/ruda_black"
            android:layout_height="40dp"
            android:textColor="@color/black"
            android:text="Description:"
            android:translationX="30dp"
            android:textSize="20dp"
            android:layout_row="2"
            android:layout_column="0"/>

        <TextView
            android:id="@+id/Bathroom_Description"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/ruda_regular"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_margin="10dp"
            android:translationX="10dp"

            android:text="Placeholder" />
        <androidx.cardview.widget.CardView
            android:background="@color/fh_tool_bar"
            android:elevation="20dp"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:translationY="-20dp"
            android:translationX="10dp"


            android:layout_width="200dp">

        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/Top_Review"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="Top Review:"

            android:fontFamily="@font/ruda_black"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:translationX="30dp"
            android:translationY="10dp"
            android:layout_margin="10dp"
            android:layout_column="0"
            android:layout_row="3"/>

        <TextView
            android:id="@+id/Best_Review"
            android:layout_width="150dp"
            android:layout_margin="10dp"
            android:layout_height="111dp"
            android:text="Placeholder"
             />

        <RatingBar
            android:id="@+id/ratingBathroomBar"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:scaleY=".8"
            android:scaleX=".8"
            android:layout_column="1"
            android:layout_margin="10dp"
            android:translationY="-50dp"
            android:layout_row="4"/>

        <Button
            android:id="@+id/Route_Button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Route" />

    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>